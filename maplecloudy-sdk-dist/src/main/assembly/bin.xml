<assembly
	xmlns="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/plugins/maven-assembly-plugin/assembly/1.1.2 http://maven.apache.org/xsd/assembly-1.1.2.xsd">
	<id>bin</id>
	<formats>
		<format>dir</format>
	</formats>
	<baseDirectory>../</baseDirectory>
	<moduleSets>

		<moduleSet>
			<useAllReactorProjects>true</useAllReactorProjects>
			<includes>
				<include>com.maplecloudy.maple:distribute-job-engin</include>
				<include>com.maplecloudy.maple:elasticsearch-yarn</include>
			</includes>
			<binaries>
				<unpack>false</unpack>
				<outputDirectory>lib</outputDirectory>
				<dependencySets>
					<dependencySet>
						<useProjectArtifact>false</useProjectArtifact>
						<outputDirectory>lib</outputDirectory>
						<excludes>
							<exclude>xerces:xercesImpl</exclude>
						</excludes>
					</dependencySet>
				</dependencySets>
			</binaries>
		</moduleSet>
	</moduleSets>
	<fileSets>
		<fileSet>
			<directory>../</directory>
			<includes>
				<include>.gitignore</include>
				<include>DEVNOTES</include>
				<include>README</include>
				<include>LICENSE</include>
				<include>NOTICE</include>
				<include>CHANGELOG</include>
				<include>RELEASE-NOTES</include>
				<include>bin/**</include>
				<include>conf/**</include>
				<include>pom.xml</include>
			</includes>
		</fileSet>
		<fileSet>
   			<directory>../distribute-job-engin/engine-apps</directory>
   			<outputDirectory>engine-apps</outputDirectory>
   			<includes>
   			 <include>**</include>
   			</includes>
  		</fileSet>
	</fileSets>
</assembly>

